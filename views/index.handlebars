<div class="col">
    <h2 class="pt-3 pb-3 mb-4 backcol">New Burgers</h2>
    <ul class="pl-5">
        {{#each burgers}}
        {{#unless devoured}}
            <div class="col-9">
                {{> burgers/burger-block devoured=false}}
            </div>
        {{/unless}}
        {{/each}}
        
    </ul>
</div>

<div class="col">
    <h2 class="pt-3 pb-3 mb-4 backcol">Devoured Burgers</h2>
    <ul class="pl-5">
        {{#each burgers}}
        {{#if devoured}}
                <div class="col-9">
                    {{> burgers/burger-block devoured=true}}
                </div>
        {{/if}}
        {{/each}}
        
    </ul>
</div>


    <h2>Add a Burger</h2>
